<p style="color: green"><%= notice %></p>
<h1>New Location</h1>
<%= form_for @location do |f| %>
    <div>
        <%= f.label :company_name %>
        <%= f.text_field :company_name %>
    </div>
    <div>
        <%= f.label "City" %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :address %>
        <%= f.text_field :address %>
    </div>
    <div class="field">
        <%= f.label :location_category_id %>
        <%= f.collection_select :location_category_id, LocationCategory.all, :id, :name, prompt: "Select Location Category" %>
    </div>
  <%= f.submit 'Create Location', class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to locations", locations_path, data: { turbo: false } %>