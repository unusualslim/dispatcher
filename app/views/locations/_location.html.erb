<div id="<%= dom_id location %>">

  <p>
    <strong>City:</strong>
    <%= location.name %>
  </p>

  <p>
    <strong>Company:</strong>
    <%= location.company_name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= location.address %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= location.phone_number %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= LocationCategory.find(location.location_category_id).name %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= location.notes %>
  </p>

</div>