<%= form_with(model: @work_order, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :subject %>
    <%= form.text_field :subject, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :location_id, 'Location' %>
    <%= form.collection_select :location_id, Location.all, :id, :name, include_blank: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :asset_id, 'Asset' %>
    <%= form.collection_select :asset_id, Asset.all, :id, :name, include_blank: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :assigned_to, 'Assigned To (User ID)' %>
    <%= form.number_field :assigned_to, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :attachments %>
    <%= form.text_field :attachments, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :vendor_id, 'Vendor' %>
    <%= form.collection_select :vendor_id, Vendor.all, :id, :name, include_blank: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>