<div class="content">
    <h2>Add Product to <%= @location.company_name %></h1>

    <%= form_with(model: [@location, @location_product], local: true) do |f| %>
    <div class="field form_field">
        <%= f.label :product_id %>
        <%= f.collection_select :product_id, @products, :id, :name, include_blank: true %>
    </div>

    <div class="field form_field">
        <%= f.label :max_capacity %>
        <%= f.number_field :max_capacity %> gal
    </div>

    <div class="field form_field">
        <%= f.label "Upper Cutoff" %> 
        <%= f.number_field :uleage_90 %> %
    </div>

    <div class="field form_field">
        <%= f.label "Lower Cutoff" %>
        <%= f.number_field :cutoff %> %
    </div>

    <div class="actions">
        <%= f.submit 'Save', class: 'btn btn-success' %>
    </div>
    <% end %>
</div>