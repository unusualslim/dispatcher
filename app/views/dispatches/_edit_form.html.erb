<%= form_with model: dispatch, url: dispatch_path(dispatch), method: :patch, local: true do |f| %>
  <div class="form-group">
    <%= f.label :driver %>
    <%= f.collection_select :driver_id, Driver.all, :id, :first_name, include_blank: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :origin %>
    <%= f.text_field :origin, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :destination %>
    <%= f.text_field :destination, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, Dispatch.statuses.keys, {}, class: 'form-control' %>
  </div>
  <%= f.submit 'Save changes', class: 'btn btn-primary' %>
<% end %>