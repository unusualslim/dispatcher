<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
<table class="index-table table table-hover">
  <thead class="index-table-head">
    <tr>
      <th style="background-color:#f8f9fa; color:#375a7f; padding: 12px 20px;">ID</th>
      <th style="background-color:#f8f9fa; color:#375a7f; padding: 12px 20px;">Driver</th>
      <th style="background-color:#f8f9fa; color:#375a7f; padding: 12px 20px;">Origin</th>
      <th style="background-color:#f8f9fa; color:#375a7f; padding: 12px 20px;">Destination</th>
      <th style="background-color:#f8f9fa; color:#375a7f; padding: 12px 20px;">Status</th>
      <th style="background-color:#f8f9fa; color:#375a7f; padding: 12px 20px;">Dispatch Date <i class="bi bi-gear-fill" style="font-size: 1.5rem; cursor: pointer;" data-bs-toggle="modal" data-bs-target="#settingsModal"></i></th>
    </tr>
  </thead>
  <tbody>
    <% @dispatches.each do |dispatch| %>
    <tr class="clickable-row" data-href="<%= dispatch_path(dispatch) %>">
      <td style="font-weight: bold; padding: 12px 20px;"><%= dispatch.id %></td>
      <td style="padding: 12px 20px;"><%= dispatch.driver ? dispatch.driver.first_name : "Unassigned" %></td>
      <td style="padding: 12px 20px;">
        <% origin_location = Location.find_by(city: dispatch.origin) %>
        <% if origin_location %>
          <a href="<%= location_path(origin_location) %>" onclick="event.stopPropagation();" class="location-link">
            <%= origin_location.company_name %>
          </a>
        <% else %>
          No origin location found
        <% end %>
      </td>
      <td style="padding: 12px 20px;">
        <% destination_location = Location.find_by(city: dispatch.destination) %>
        <% if destination_location %>
          <a href="<%= location_path(destination_location) %>" onclick="event.stopPropagation();" class="location-link">
            <%= destination_location.company_name %>
          </a>
        <% else %>
          No destination location found
        <% end %>
      </td>
      <td style="padding: 12px 20px;"><%= dispatch.status %></td>
      <td style="padding: 12px 20px;"><%= dispatch.dispatch_date %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<!-- Settings Modal -->
<div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="settingsModalLabel">Filter Dispatches by Driver</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: dispatches_path, method: :get, local: true, data: { turbo: false } do |form| %>
          <div class="form-group">
            <input type="checkbox" id="select_all"> Select All<br>
            <% @drivers.each do |driver| %>
              <div class="form-check">
                <%= form.check_box :driver_ids, { multiple: true, class: "form-check-input" }, driver.id %>
                <%= form.label :driver_ids, driver.first_name, class: "form-check-label" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= form.submit "Apply", class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>